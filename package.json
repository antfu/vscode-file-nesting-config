{
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.6.5",
  "workspaces": [
    "extension"
  ],
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/antfu",
  "scripts": {
    "update": "node update.mjs",
    "lint": "eslint .",
    "ext:build": "cd extension && tsdown src/index.ts --external vscode --format cjs --clean",
    "ext:dev": "nr ext:build --watch src",
    "ext:publish": "nr ext:build && cd extension && vsce publish --no-dependencies",
    "ext:pack": "nr ext:build && cd extension && vsce package --no-dependencies"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.10.1",
    "@antfu/ni": "^24.3.0",
    "@types/vscode": "^1.98.0",
    "eslint": "^9.22.0",
    "eslint-factory": "^0.1.2",
    "ofetch": "^1.4.1",
    "tsdown": "^0.9.6",
    "typescript": "^5.8.2"
  }
}
